<h1>タスク一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>タスクのID</th>
      <th>タスクの内容</th>
    </tr>
  </thead>
  
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task)  %></td>
        <td><%= task.content  %></td>
      </tr>
    <% end %>
  </tbody>

</table>


