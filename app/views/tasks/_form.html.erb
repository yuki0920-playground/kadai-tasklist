<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_expnlanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, 'タスクの内容' %>
  <%= f.text_field :content %>
   <%= f.label :status, 'タスクのステータス' %>
  <%= f.text_field :status %>
 
  <%= f.submit '投稿' %>
<% end %>