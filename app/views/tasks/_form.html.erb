<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_expnlanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    <%= f.label :content, 'タスクの内容' %>
    <%= f.text_field :content, class: 'form-control'%>
  </div>
  <div class="form-group col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
     <%= f.label :status, 'タスクのステータス' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>
  
  <%= f.submit '投稿' %>
<% end %>